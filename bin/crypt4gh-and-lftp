#!/bin/sh
#
set -x
echo "Command line: $0 $@"

crypt4gh-wrap /secret/testcineca.sk /secret/ega_key.c4gh.pub $(cat /secret/sftpkeypassword) $@

if [ $? -ne 0 ];
then
  echo "ERROR: Problems to encrypt files" >&2
  exit 1
fi

ls -l

. /usr/local/bin/passwd.sh

cd $(dirname $1)
ls -l

lftp -f /secret/lftp.txt

